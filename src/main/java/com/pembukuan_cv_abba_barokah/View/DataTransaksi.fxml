<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pembukuan_cv_abba_barokah.Controller.DataTransaksiController"
           stylesheets="@Global.css">

    <VBox spacing="24" maxWidth="1000" styleClass="page-container">

        <Label text="Data Transaksi"
               style="-fx-font-size: 22; -fx-font-weight: bold;"/>

        <VBox spacing="24" styleClass="card">

            <GridPane hgap="20" vgap="16">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- Nomor Faktur -->
                <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <Label text="Nomor Faktur"/>
                    <TextField fx:id="noFakturField"
                               promptText="Contoh: INV-2026-001"/>
                </VBox>

                <!-- Tanggal Transaksi -->
                <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <Label text="Tanggal Transaksi"/>
                    <DatePicker fx:id="tanggalField"/>
                </VBox>
            </GridPane>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button fx:id="btnSimpan"
                        text="Simpan"
                        onAction="#handleSimpan"
                        styleClass="btn-success"/>

                <Button fx:id="btnReset"
                        text="Reset"
                        onAction="#handleReset"
                        styleClass="btn-secondary"/>
            </HBox>

        </VBox>
    </VBox>
</StackPane>