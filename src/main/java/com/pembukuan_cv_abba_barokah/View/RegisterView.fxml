<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pembukuan_cv_abba_barokah.Controller.UserController"
           stylesheets="@Login.css"
           styleClass="root">

    <VBox alignment="CENTER"
          spacing="16"
          prefWidth="320"
          styleClass="login-card">

        <Label text="Register Akun"
               styleClass="title"/>

        <TextField fx:id="regUsernameField"
                   promptText="Username"
                   styleClass="input"/>

        <PasswordField fx:id="regPasswordField"
                       promptText="Password"
                       styleClass="input"/>

        <Button text="REGISTER"
                onAction="#handleRegister"
                styleClass="login-button"/>

        <Label fx:id="regMessageLabel"
               styleClass="message"/>
    </VBox>

</StackPane>