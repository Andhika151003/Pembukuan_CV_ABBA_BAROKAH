<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.PembayaranController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <!-- ===================== TITLE ===================== -->
    <HBox alignment="CENTER">
        <Label text="Data Pembayaran"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <!-- ===================== FORM ===================== -->
    <StackPane>
        <VBox maxWidth="800" styleClass="card">

            <GridPane styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints prefWidth="160"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <children>
                    <Label text="ID Transaksi"/>
                    <TextField fx:id="txtIdTransaksi"
                               GridPane.columnIndex="1"/>

                    <Label text="ID Penjualan" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtIdPenjualan"
                               GridPane.rowIndex="1"
                               GridPane.columnIndex="1"/>

                    <Label text="ID Pembelian" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtIdPembelian"
                               GridPane.rowIndex="2"
                               GridPane.columnIndex="1"/>

                    <Label text="ID Utang" GridPane.rowIndex="3"/>
                    <TextField fx:id="txtIdUtang"
                               GridPane.rowIndex="3"
                               GridPane.columnIndex="1"/>

                    <Label text="Tanggal Pembayaran" GridPane.rowIndex="4"/>
                    <DatePicker fx:id="dpTanggal"
                                GridPane.rowIndex="4"
                                GridPane.columnIndex="1"/>

                    <Label text="Jumlah Pembayaran" GridPane.rowIndex="5"/>
                    <TextField fx:id="txtJumlah"
                               GridPane.rowIndex="5"
                               GridPane.columnIndex="1"/>

                    <Label text="Metode Pembayaran" GridPane.rowIndex="6"/>
                    <TextField fx:id="txtMetode"
                               GridPane.rowIndex="6"
                               GridPane.columnIndex="1"/>

                    <Label text="Keterangan" GridPane.rowIndex="7"/>
                    <TextArea fx:id="txtKeterangan"
                              prefRowCount="3"
                              GridPane.rowIndex="7"
                              GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <!-- ===================== BUTTON ===================== -->
            <HBox spacing="12"
                  alignment="CENTER_RIGHT"
                  style="-fx-padding: 18 0 0 0;">
                <Button text="Simpan"
                        onAction="#handleSimpan"/>
                <Button text="Update"
                        onAction="#handleUpdate"/>
                <Button text="Hapus"
                        styleClass="button-danger"
                        onAction="#handleHapus"/>
            </HBox>

        </VBox>
    </StackPane>

    <!-- ===================== TABLE ===================== -->
    <TableView fx:id="tablePembayaran" prefHeight="360">
        <columns>
            <TableColumn fx:id="colId"
                         text="ID"
                         prefWidth="80"/>
            <TableColumn fx:id="colTanggal"
                         text="Tanggal"
                         prefWidth="120"/>
            <TableColumn fx:id="colJumlah"
                         text="Jumlah"
                         prefWidth="160"/>
            <TableColumn fx:id="colMetode"
                         text="Metode"
                         prefWidth="140"/>
            <TableColumn fx:id="colKeterangan"
                         text="Keterangan"
                         prefWidth="260"/>
        </columns>
    </TableView>

</VBox>