<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.PenjualanController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <HBox alignment="CENTER">
        <Label text="Data Penjualan"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <StackPane>
        <VBox maxWidth="800" styleClass="card">

            <GridPane hgap="15" vgap="12">
                <columnConstraints>
                    <ColumnConstraints prefWidth="160"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <Label text="No Faktur"/>
                <TextField fx:id="txtNoFaktur"
                           GridPane.columnIndex="1"/>

                <Label text="Tanggal" GridPane.rowIndex="1"/>
                <DatePicker fx:id="dpTanggal"
                            GridPane.rowIndex="1"
                            GridPane.columnIndex="1"/>

                <Label text="Nama Customer" GridPane.rowIndex="2"/>
                <TextField fx:id="txtNamaCustomer"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <Label text="Alamat Customer" GridPane.rowIndex="3"/>
                <TextField fx:id="txtAlamatCustomer"
                           GridPane.rowIndex="3"
                           GridPane.columnIndex="1"/>

                <Label text="Total Penjualan" GridPane.rowIndex="4"/>
                <TextField fx:id="txtTotal"
                           GridPane.rowIndex="4"
                           GridPane.columnIndex="1"/>

                <Label text="Keterangan" GridPane.rowIndex="5"/>
                <TextArea fx:id="txtKeterangan"
                          prefRowCount="3"
                          GridPane.rowIndex="5"
                          GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="12"
                  alignment="CENTER_RIGHT"
                  style="-fx-padding: 18 0 0 0;">
                <Button text="Simpan" onAction="#handleSimpan"/>
                <Button text="Update" onAction="#handleUpdate"/>
                <Button text="Hapus"
                        onAction="#handleDelete"
                        styleClass="button-danger"/>
            </HBox>

        </VBox>
    </StackPane>

    <TableView fx:id="tablePenjualan" prefHeight="360">
        <columns>
            <TableColumn fx:id="colNoFaktur"
                         text="No Faktur"
                         prefWidth="150"/>
            <TableColumn fx:id="colCustomer"
                         text="Customer"
                         prefWidth="200"/>
            <TableColumn fx:id="colTanggal"
                         text="Tanggal"
                         prefWidth="130"/>
            <TableColumn fx:id="colTotal"
                         text="Total"
                         prefWidth="150"/>
        </columns>
    </TableView>

</VBox>