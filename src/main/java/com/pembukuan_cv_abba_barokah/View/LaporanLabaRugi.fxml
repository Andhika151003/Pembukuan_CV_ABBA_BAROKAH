                   GridPane.columnIndex="1"/>

            <Label text="TOTAL PEMBELIAN"
                   GridPane.rowIndex="2"
                   style="-fx-font-weight:bold;"/>
            <Label fx:id="lblTotalPembelian"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"
                   style="-fx-font-weight:bold;"/>

            <Label text="TOTAL LABA / RUGI"
                   GridPane.rowIndex="3"
                   style="-fx-font-weight:bold;"/>
            <Label fx:id="lblLabaRugi"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="1"
                   style="-fx-font-weight:bold;"/>
        </GridPane>

        <Separator GridPane.rowIndex="5"/>

        <!-- ================= BIAYA OPERASIONAL ================= -->
        <GridPane GridPane.rowIndex="6"
                  hgap="40"
                  vgap="8"
                  alignment="CENTER">

            <columnConstraints>
                <ColumnConstraints prefWidth="420"/>
                <ColumnConstraints prefWidth="180" halignment="RIGHT"/>
            </columnConstraints>

            <Label text="3.1 Total Biaya Administrasi"/>
            <Label fx:id="lblBiayaAdministrasi"
                   GridPane.columnIndex="1"/>

            <Label text="3.2 Total Biaya Operasional"
