            <Label text="1.2 Total Retur Penjualan"
                   GridPane.rowIndex="1"/>
            <Label fx:id="lblReturPenjualan"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="1"/>

            <Label text="TOTAL PENDAPATAN"
                   GridPane.rowIndex="2"
                   style="-fx-font-weight:bold;"/>
            <Label fx:id="lblTotalPendapatan"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"
                   style="-fx-font-weight:bold;"/>
        </GridPane>

        <Separator GridPane.rowIndex="2"/>

        <!-- ================= KREDIT ================= -->
        <Label text="KREDIT"
               GridPane.rowIndex="3"
               style="-fx-font-weight:bold;"/>

        <GridPane GridPane.rowIndex="4"
                  hgap="40" vgap="8"
                  alignment="CENTER">

            <columnConstraints>
                <ColumnConstraints prefWidth="420"/>
                <ColumnConstraints prefWidth="180" halignment="RIGHT"/>
            </columnConstraints>

            <Label text="2.1 Total HPP"/>
            <Label fx:id="lblTotalHpp"
