<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.GajiPegawaiController"
      spacing="24"
      style="-fx-padding: 16;">

    <!-- ===================== TITLE ===================== -->
    <HBox alignment="CENTER">
        <Label text="Form Gaji Pegawai"
               style="-fx-font-size: 22px; -fx-font-weight: bold;" />
    </HBox>

    <!-- ===================== FORM (CENTER) ===================== -->
    <StackPane>
        <VBox maxWidth="560" styleClass="card">

            <GridPane styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints prefWidth="180"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <children>
                    <Label text="ID Pegawai"/>
                    <TextField fx:id="txtIdPegawai"
                               GridPane.columnIndex="1"/>

                    <Label text="Periode" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtPeriode"
                               GridPane.rowIndex="1"
                               GridPane.columnIndex="1"/>

                    <Label text="Gaji Pokok" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtGajiPokok"
                               GridPane.rowIndex="2"
                               GridPane.columnIndex="1"/>

                    <Label text="Tunjangan" GridPane.rowIndex="3"/>
                    <TextField fx:id="txtTunjangan"
                               GridPane.rowIndex="3"
                               GridPane.columnIndex="1"/>

                    <Label text="Potongan" GridPane.rowIndex="4"/>
                    <TextField fx:id="txtPotongan"
                               GridPane.rowIndex="4"
                               GridPane.columnIndex="1"/>

                    <Label text="Tanggal Pembayaran" GridPane.rowIndex="5"/>
                    <DatePicker fx:id="dpTanggal"
                                GridPane.rowIndex="5"
                                GridPane.columnIndex="1"/>

                    <Label text="Status Pembayaran" GridPane.rowIndex="6"/>
                    <ComboBox fx:id="cbStatus"
                              GridPane.rowIndex="6"
                              GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <!-- ===================== BUTTON ===================== -->
            <HBox spacing="12"
                  alignment="CENTER_RIGHT"
                  style="-fx-padding: 18 0 0 0;">
                <Button text="Simpan"
                        onAction="#handleSimpan"/>
                <Button text="Update"
                        onAction="#handleUpdate"/>
                <Button text="Hapus"
                        styleClass="button-danger"
                        onAction="#handleHapus"/>
            </HBox>

        </VBox>
    </StackPane>

    <!-- ===================== TABLE ===================== -->
    <TableView fx:id="tableGaji" prefHeight="360">
        <columns>
            <TableColumn fx:id="colPeriode"
                         text="Periode"
                         prefWidth="140"/>
            <TableColumn fx:id="colGajiPokok"
                         text="Gaji Pokok"
                         prefWidth="140"/>
            <TableColumn fx:id="colTunjangan"
                         text="Tunjangan"
                         prefWidth="140"/>
            <TableColumn fx:id="colPotongan"
                         text="Potongan"
                         prefWidth="140"/>
            <TableColumn fx:id="colTotalGaji"
                         text="Total Gaji"
                         prefWidth="160"/>
            <TableColumn fx:id="colTanggal"
                         text="Tanggal"
                         prefWidth="130"/>
            <TableColumn fx:id="colStatus"
                         text="Status"
                         prefWidth="130"/>
        </columns>
    </TableView>

</VBox>