<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pembukuan_cv_abba_barokah.Controller.LaporanNeracaController">

    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Judul -->
            <Label text="Laporan Neraca Keuangan"
                   style="-fx-font-size:22px; -fx-font-weight:bold;"/>

            <Label fx:id="labelTahun"
                   text="Tahun : 2026"
                   style="-fx-font-size:14px;"/>

            <!-- ================= ASET ================= -->
            <VBox spacing="10" prefWidth="420">

                <Label text="ASET"
                       style="-fx-font-weight:bold; -fx-font-size:14px;"/>

                <Label text="Aset Lancar"
                       style="-fx-font-weight:bold;"/>

                <GridPane hgap="10" vgap="6">

                    <Label text="Bank"/>
                    <Label text="Rp." GridPane.columnIndex="1"/>
                    <Label fx:id="bank" GridPane.columnIndex="2"/>

                    <Label text="Piutang Lain-lain" GridPane.rowIndex="1"/>
                    <Label text="Rp." GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label fx:id="piutangLain" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                    <Label text="Persediaan" GridPane.rowIndex="2"/>
                    <Label text="Rp." GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Label fx:id="persediaan" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                    <Label text="TOTAL ASET LANCAR"
                           GridPane.rowIndex="3"
                           style="-fx-font-weight:bold;"/>
                    <Label text="Rp." GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <Label fx:id="totalAsetLancar"
                           GridPane.columnIndex="2"
                           GridPane.rowIndex="3"
                           style="-fx-font-weight:bold;"/>

                </GridPane>

                <Label text="Aset Tidak Lancar"
                       style="-fx-font-weight:bold;"/>

                <GridPane hgap="10" vgap="6">

                    <Label text="Biaya Inventaris"/>
                    <Label text="Rp." GridPane.columnIndex="1"/>
                    <Label fx:id="biayaInventaris" GridPane.columnIndex="2"/>

                    <Label text="Biaya Lain-lain" GridPane.rowIndex="1"/>
                    <Label text="Rp." GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label fx:id="biayaLain" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                    <Label text="TOTAL ASET TIDAK LANCAR"
                           GridPane.rowIndex="2"
                           style="-fx-font-weight:bold;"/>
                    <Label text="Rp." GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Label fx:id="totalAsetTidakLancar"
                           GridPane.columnIndex="2"
                           GridPane.rowIndex="2"
                           style="-fx-font-weight:bold;"/>

                </GridPane>

                <GridPane hgap="10">
                    <Label text="TOTAL ASET"
                           style="-fx-font-weight:bold; -fx-text-fill:green;"/>
                    <Label text="Rp." GridPane.columnIndex="1"/>
                    <Label fx:id="totalAset"
                           GridPane.columnIndex="2"
                           style="-fx-font-weight:bold; -fx-text-fill:green;"/>
                </GridPane>

                <!-- ================= KEWAJIBAN & EKUITAS ================= -->

                <Label text="KEWAJIBAN DAN EKUITAS"
                       style="-fx-font-weight:bold; -fx-font-size:14px;"/>

                <Label text="Kewajiban Jangka Pendek"
                       style="-fx-font-weight:bold;"/>

                <GridPane hgap="10" vgap="6">

                    <Label text="Utang Usaha"/>
                    <Label text="Rp." GridPane.columnIndex="1"/>
                    <Label fx:id="utangUsaha" GridPane.columnIndex="2"/>

                </GridPane>

                <Label text="Ekuitas"
                       style="-fx-font-weight:bold;"/>

                <GridPane hgap="10" vgap="6">

                    <Label text="Ekuitas"/>
                    <Label text="Rp." GridPane.columnIndex="1"/>
                    <Label fx:id="ekuitas" GridPane.columnIndex="2"/>

                    <Label text="Modal Disetor" GridPane.rowIndex="1"/>
                    <Label text="Rp." GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label fx:id="modalDisetor" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                    <Label text="JUMLAH EKUITAS"
                           GridPane.rowIndex="2"
                           style="-fx-font-weight:bold;"/>
                    <Label text="Rp." GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Label fx:id="jumlahEkuitas"
                           GridPane.columnIndex="2"
                           GridPane.rowIndex="2"
                           style="-fx-font-weight:bold;"/>

                </GridPane>

                <GridPane hgap="10">
                    <Label text="TOTAL KEWAJIBAN DAN EKUITAS"
                           style="-fx-font-weight:bold; -fx-text-fill:green;"/>
                    <Label text="Rp." GridPane.columnIndex="1"/>
                    <Label fx:id="totalKewajibanEkuitas"
                           GridPane.columnIndex="2"
                           style="-fx-font-weight:bold; -fx-text-fill:green;"/>
                </GridPane>

            </VBox>

            <Button text="Simpan Laporan"
                    style="-fx-background-color:#2ecc71; -fx-text-fill:white; -fx-background-radius:20;"
                    prefWidth="160"/>

        </VBox>
    </center>

</BorderPane>