<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pembukuan_cv_abba_barokah.Controller.BiayaPemasaranController">

    <VBox spacing="30" alignment="TOP_CENTER" style="-fx-background-color:#f5f6fa;">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Label text="Biaya Pemasaran"
               style="-fx-font-size:22px; -fx-font-weight:bold;"/>

        <!-- ================= IDENTITAS TRANSAKSI ================= -->
        <VBox spacing="20" style="-fx-background-color:white; -fx-padding:24; -fx-background-radius:14;">
            <Label text="Identitas Transaksi" style="-fx-font-weight:bold;"/>

            <GridPane hgap="20" vgap="16">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <VBox spacing="6">
                    <Label text="Tanggal Biaya Pemasaran"/>
                    <DatePicker fx:id="tanggalField"/>
                </VBox>

                <VBox spacing="6" GridPane.columnIndex="1">
                    <Label text="Nomor Transaksi"/>
                    <TextField fx:id="nomorTransaksiField" promptText="Otomatis oleh sistem" disable="true"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1">
                    <Label text="Nama Barang"/>
                    <TextField fx:id="namaBarangField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label text="Kategori Barang"/>
                    <ComboBox fx:id="kategoriBox"/>
                </VBox>
            </GridPane>
        </VBox>

        <!-- ================= INFORMASI PEMBELIAN ================= -->
        <VBox spacing="20" style="-fx-background-color:white; -fx-padding:24; -fx-background-radius:14;">
            <Label text="Informasi Pembelian" style="-fx-font-weight:bold;"/>

            <GridPane hgap="20" vgap="16">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <VBox spacing="6">
                    <Label text="Jumlah"/>
                    <TextField fx:id="jumlahField"/>
                </VBox>

                <VBox spacing="6" GridPane.columnIndex="1">
                    <Label text="Satuan"/>
                    <TextField fx:id="satuanField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1">
                    <Label text="Harga Satuan"/>
                    <TextField fx:id="hargaSatuanField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label text="Total Pembelian"/>
                    <TextField fx:id="totalPembelianField"/>
                </VBox>
            </GridPane>
        </VBox>

        <!-- ================= BIAYA TAMBAHAN ================= -->
        <VBox spacing="20" style="-fx-background-color:white; -fx-padding:24; -fx-background-radius:14;">
            <Label text="Biaya Tambahan" style="-fx-font-weight:bold;"/>

            <GridPane hgap="20" vgap="16">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <VBox spacing="6">
                    <Label text="Biaya Transport"/>
                    <TextField fx:id="biayaTransportField"/>
                </VBox>

                <VBox spacing="6" GridPane.columnIndex="1">
                    <Label text="Biaya Lain-lain"/>
                    <TextField fx:id="biayaLainField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1">
                    <Label text="Total Biaya Tambahan"/>
                    <TextField fx:id="totalBiayaTambahanField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label text="Total Barang Contoh"/>
                    <TextField fx:id="totalBarangContohField"/>
                </VBox>
            </GridPane>
        </VBox>

        <!-- ================= PEMBAYARAN ================= -->
        <VBox spacing="20" style="-fx-background-color:white; -fx-padding:24; -fx-background-radius:14;">
            <Label text="Pembayaran dan Keterangan" style="-fx-font-weight:bold;"/>

            <VBox spacing="6">
                <Label text="Metode Pembayaran"/>
                <ComboBox fx:id="metodeBayarBox"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Keterangan"/>
                <TextArea fx:id="keteranganArea" prefRowCount="3"/>
            </VBox>
        </VBox>

        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="btnSimpan"
                    text="Simpan Pembelian"
                    onAction="#handleSimpan"
                    style="-fx-background-color:#2ecc71; -fx-text-fill:white;
                           -fx-padding:10 20; -fx-background-radius:8;"/>
        </HBox>

    </VBox>
</ScrollPane>