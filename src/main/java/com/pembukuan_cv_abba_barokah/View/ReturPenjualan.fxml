<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.ReturPenjualanController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <HBox alignment="CENTER">
        <Label text="Retur Penjualan"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <StackPane>
        <VBox maxWidth="700" styleClass="card">

            <GridPane styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints prefWidth="180"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <children>
                    <Label text="No Retur"/>
                    <TextField fx:id="noReturField" GridPane.columnIndex="1"/>

                    <Label text="Tanggal Retur" GridPane.rowIndex="1"/>
                    <DatePicker fx:id="tanggalReturField"
                                GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Jumlah Retur" GridPane.rowIndex="2"/>
                    <TextField fx:id="jumlahReturField"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Alasan Retur" GridPane.rowIndex="3"/>
                    <TextField fx:id="alasanReturField"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Keterangan" GridPane.rowIndex="4"/>
                    <TextField fx:id="keteranganReturField"
                               GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Status Retur" GridPane.rowIndex="5"/>
                    <ComboBox fx:id="cbStatus"
                              GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Jenis Pengembalian" GridPane.rowIndex="6"/>
                    <ComboBox fx:id="cbJenis"
                              GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Label text="ID Penjualan" GridPane.rowIndex="7"/>
                    <ComboBox fx:id="cbIdPenjualan"
                              GridPane.rowIndex="7" GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <HBox spacing="12" alignment="CENTER_RIGHT"
                  style="-fx-padding: 18 0 0 0;">
                <Button text="Simpan" onAction="#handleSimpan"/>
                <Button text="Update" onAction="#handleUpdate"/>
                <Button text="Hapus" styleClass="button-danger"
                        onAction="#handleHapus"/>
            </HBox>

        </VBox>
    </StackPane>

    <TableView fx:id="tableRetur" prefHeight="360">
        <columns>
            <TableColumn fx:id="colNo" text="No Retur" prefWidth="160"/>
            <TableColumn fx:id="colJumlah" text="Jumlah" prefWidth="100"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
            <TableColumn fx:id="colIdPenjualan" text="ID Penjualan" prefWidth="140"/>
        </columns>
    </TableView>

</VBox>