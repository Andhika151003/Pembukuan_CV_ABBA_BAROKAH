<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.HppController"
      stylesheets="@Global.css"
      spacing="10"
      styleClass="content">

    <!-- ===================== HEADER ===================== -->
    <HBox alignment="CENTER_LEFT"
          spacing="16"
          style="-fx-padding: 0 8 4 8;">

        <Label text="Harga Pokok Penjualan"
               style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="Pembelian Langsung"
                styleClass="btn-primary"
                onAction="#openPembelianLangsung"/>

        <Button text="Swakelola"
                styleClass="btn-secondary"
                onAction="#openSwakelola"/>
    </HBox>

    <!-- ===================== SUB CONTENT ===================== -->
    <StackPane fx:id="contentPane"
               VBox.vgrow="ALWAYS"
               styleClass="content-area"
               style="-fx-padding: 0 0 0 0;"/>

</VBox>
