<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pembukuan_cv_abba_barokah.Controller.SetorPajakController"
           style="-fx-background-color: #f5f6fa;">

    <VBox spacing="28" alignment="CENTER" maxWidth="900">
        <padding>
            <Insets top="32" right="32" bottom="32" left="32"/>
        </padding>

        <!-- ================= TITLE ================= -->
        <Label text="Setor Pajak"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <!-- ================= HEADER ================= -->
        <VBox spacing="20"
              style="-fx-background-color: white;
                     -fx-padding: 24;
                     -fx-background-radius: 14;">

            <GridPane hgap="20" vgap="16">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <!-- ROW 0 -->
                <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <Label text="Masa Pajak"/>
                    <ComboBox fx:id="masaPajakBox"
                              promptText="Pilih masa pajak"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <Label text="Jenis Pajak"/>
                    <ComboBox fx:id="jenisPajakBox"
                              promptText="PPN / PPh"/>
                </VBox>

                <!-- ROW 1 -->
                <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <Label text="Tanggal Setor"/>
                    <DatePicker fx:id="tanggalSetorField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label text="Metode Pembayaran"/>
                    <ComboBox fx:id="metodeBayarBox"
                              promptText="Pilih metode"/>
                </VBox>

                <!-- ROW 2 -->
                <VBox spacing="6" GridPane.rowIndex="2" GridPane.columnIndex="0">
                    <Label text="Nomor Bukti Setor"/>
                    <TextField fx:id="buktiSetorField"
                               promptText="NTPN / ID Billing"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <Label text="Status Setor"/>
                    <Label fx:id="statusLabel"
                           text="BELUM SETOR"
                           style="-fx-text-fill: red;
                                  -fx-font-weight: bold;"/>
                </VBox>

                <!-- ROW 3 -->
                <VBox spacing="6" GridPane.rowIndex="3" GridPane.columnIndex="0">
                     <Label text="Periode Pelaporan"/>
                     <ComboBox fx:id="periodePelaporanBox"
                                   promptText="Bulanan / Tahunan"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="3" GridPane.columnIndex="1">
                     <Label text="Sumber Pajak"/>
                     <Label fx:id="sumberPajakLabel"
                            text="Penjualan"
                            style="-fx-font-weight: bold;"/>
                </VBox>
                
            </GridPane>
        </VBox>

        <!-- ================= PERHITUNGAN PAJAK ================= -->
        <VBox spacing="18"
              style="-fx-background-color: white;
                     -fx-padding: 24;
                     -fx-background-radius: 14;">

            <Label text="Perhitungan Pajak"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <GridPane hgap="20" vgap="14">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <Label text="Total Penjualan"
                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="totalPenjualanLabel"
                       text="Rp 0"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Dasar Pengenaan Pajak (DPP)"
                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="dppLabel"
                       text="Rp 0"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="PPN 11%"
                       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="ppnLabel"
                       text="Rp 0"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Total Pajak Terutang"
                       style="-fx-font-weight: bold;"
                       GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="totalPajakLabel"
                       text="Rp 0"
                       style="-fx-font-weight: bold;"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>

        <!-- ================= KETERANGAN ================= -->
        <VBox spacing="6"
              style="-fx-background-color: white;
                     -fx-padding: 24;
                     -fx-background-radius: 14;">
            <Label text="Keterangan"/>
            <TextArea fx:id="keteranganArea"
                      prefRowCount="3"
                      promptText="Catatan tambahan (opsional)"/>
        </VBox>

        <!-- ================= BUTTON ================= -->
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="btnSimpan"
                    text="Simpan Setor Pajak"
                    onAction="#handleSimpan"
                    disable="true"
                    style="-fx-background-color: #3498db;
                           -fx-text-fill: white;
                           -fx-padding: 10 20;
                           -fx-background-radius: 8;"/>
        </HBox>

    </VBox>
</StackPane>