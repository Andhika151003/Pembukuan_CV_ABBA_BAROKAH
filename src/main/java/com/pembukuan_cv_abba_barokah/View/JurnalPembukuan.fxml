<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pembukuan_cv_abba_barokah.Controller.JurnalPembukuanController"
           stylesheets="@Global.css">

    <VBox spacing="24" maxWidth="1100" styleClass="page-container">

        <Label text="Jurnal Pembukuan"
               style="-fx-font-size: 22; -fx-font-weight: bold;"/>

        <Label fx:id="bulanTahunLabel"
               text="Bulan : -"
               style="-fx-font-size: 15; -fx-font-weight: bold;"/>

        <TableView fx:id="jurnalTable" prefHeight="420">
            <columns>
                <TableColumn fx:id="noCol" text="No" prefWidth="60"/>
                <TableColumn fx:id="tanggalCol" text="Tanggal" prefWidth="130"/>
                <TableColumn fx:id="ketCol" text="Keterangan" prefWidth="360"/>
                <TableColumn fx:id="debetCol" text="Debet (Uang Masuk)" prefWidth="220"/>
                <TableColumn fx:id="kreditCol" text="Kredit (Uang Keluar)" prefWidth="220"/>
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="btnSimpan"
                    text="Simpan Jurnal"
                    onAction="#handleSimpan"
                    styleClass="btn-success"/>
        </HBox>

    </VBox>
</StackPane>