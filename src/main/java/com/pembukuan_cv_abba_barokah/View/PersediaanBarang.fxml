<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.PersediaanBarangController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <!-- ================= TITLE ================= -->
    <HBox alignment="CENTER">
        <Label text="Persediaan Barang"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <!-- ================= FORM ================= -->
    <StackPane>
        <VBox maxWidth="800" styleClass="card">

            <GridPane styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints prefWidth="160"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <children>
                    <Label text="Tanggal"/>
                    <DatePicker fx:id="tanggalField" GridPane.columnIndex="1"/>

                    <Label text="Nama Barang" GridPane.rowIndex="1"/>
                    <TextField fx:id="namaBarangField"
                               GridPane.rowIndex="1"
                               GridPane.columnIndex="1"/>

                    <Label text="Satuan" GridPane.rowIndex="2"/>
                    <TextField fx:id="satuanField"
                               GridPane.rowIndex="2"
                               GridPane.columnIndex="1"/>

                    <Label text="Jenis Transaksi" GridPane.rowIndex="3"/>
                    <ComboBox fx:id="cbJenis"
                              GridPane.rowIndex="3"
                              GridPane.columnIndex="1"/>

                    <Label text="Jumlah" GridPane.rowIndex="4"/>
                    <TextField fx:id="jumlahField"
                               GridPane.rowIndex="4"
                               GridPane.columnIndex="1"/>

                    <Label text="Harga Satuan" GridPane.rowIndex="5"/>
                    <TextField fx:id="hargaSatuanField"
                               GridPane.rowIndex="5"
                               GridPane.columnIndex="1"/>

                    <Label text="Keterangan" GridPane.rowIndex="6"/>
                    <TextField fx:id="keteranganField"
                               GridPane.rowIndex="6"
                               GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <!-- ================= BUTTON ================= -->
            <HBox spacing="12"
                  alignment="CENTER_RIGHT"
                  style="-fx-padding: 18 0 0 0;">
                <Button text="Simpan"
                        onAction="#handleSimpan"/>
                <Button text="Hapus"
                        styleClass="button-danger"
                        onAction="#handleHapus"/>
            </HBox>

        </VBox>
    </StackPane>

    <!-- ================= TABLE ================= -->
    <TableView fx:id="table" prefHeight="360">
        <columns>
            <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="120"/>
            <TableColumn fx:id="colNama" text="Barang" prefWidth="200"/>
            <TableColumn fx:id="colJenis" text="Jenis" prefWidth="140"/>
            <TableColumn fx:id="colJumlah" text="Jumlah" prefWidth="100"/>
            <TableColumn fx:id="colHarga" text="Harga Satuan" prefWidth="160"/>
        </columns>
    </TableView>

</VBox>