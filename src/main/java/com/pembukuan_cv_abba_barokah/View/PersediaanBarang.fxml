<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.PersediaanBarangController"
      stylesheets="@Global.css"
      spacing="24"
      alignment="TOP_CENTER"
      style="-fx-padding: 24;">

    <!-- ===================== TITLE ===================== -->
    <Label text="Form Persediaan Barang"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- ===================== FORM CARD ===================== -->
    <VBox maxWidth="560"
          styleClass="card"
          alignment="CENTER">

        <GridPane styleClass="form-grid">
            <columnConstraints>
                <ColumnConstraints prefWidth="180"/>
                <ColumnConstraints/>
            </columnConstraints>

            <children>
                <Label text="Tanggal"/>
                <DatePicker fx:id="dpTanggal"
                            GridPane.columnIndex="1"/>

                <Label text="Nama Barang" GridPane.rowIndex="1"/>
                <TextField fx:id="txtNamaBarang"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>

                <Label text="Satuan" GridPane.rowIndex="2"/>
                <TextField fx:id="txtSatuan"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <Label text="Jenis Transaksi" GridPane.rowIndex="3"/>
                <ComboBox fx:id="cbJenisTransaksi"
                          GridPane.rowIndex="3"
                          GridPane.columnIndex="1"/>

                <Label text="Jumlah Masuk" GridPane.rowIndex="4"/>
                <TextField fx:id="txtJumlahMasuk"
                           GridPane.rowIndex="4"
                           GridPane.columnIndex="1"/>

                <Label text="Jumlah Keluar" GridPane.rowIndex="5"/>
                <TextField fx:id="txtJumlahKeluar"
                           GridPane.rowIndex="5"
                           GridPane.columnIndex="1"/>

                <Label text="Harga Satuan" GridPane.rowIndex="6"/>
                <TextField fx:id="txtHargaSatuan"
                           GridPane.rowIndex="6"
                           GridPane.columnIndex="1"/>

                <Label text="Keterangan" GridPane.rowIndex="7"/>
                <TextField fx:id="txtKeterangan"
                           GridPane.rowIndex="7"
                           GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <!-- ===================== BUTTON ===================== -->
        <HBox spacing="12"
              alignment="CENTER_RIGHT"
              style="-fx-padding: 18 0 0 0;">
            <Button text="Simpan" onAction="#handleSimpan"/>
            <Button text="Update" onAction="#handleUpdate"/>
            <Button text="Hapus"
                    styleClass="button-danger"
                    onAction="#handleHapus"/>
        </HBox>
    </VBox>

    <!-- ===================== TABLE ===================== -->
    <TableView fx:id="tablePersediaan"
               prefHeight="360"
               maxWidth="1100">

        <columns>
            <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="120"/>
            <TableColumn fx:id="colNama" text="Nama Barang" prefWidth="220"/>
            <TableColumn fx:id="colJenis" text="Jenis" prefWidth="160"/>
            <TableColumn fx:id="colMasuk" text="Masuk" prefWidth="100"/>
            <TableColumn fx:id="colKeluar" text="Keluar" prefWidth="100"/>
            <TableColumn fx:id="colSaldo" text="Saldo Akhir" prefWidth="160"/>
        </columns>
    </TableView>

</VBox>