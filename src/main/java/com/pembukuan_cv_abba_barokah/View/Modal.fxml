<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pembukuan_cv_abba_barokah.Controller.ModalController"
           stylesheets="@Global.css">

    <VBox spacing="24" maxWidth="800" styleClass="page-container">

        <Label text="Modal"
               style="-fx-font-size: 22; -fx-font-weight: bold;"/>

        <VBox spacing="20" styleClass="card">

            <GridPane hgap="20" vgap="16">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <VBox spacing="6">
                    <Label text="Tanggal"/>
                    <DatePicker fx:id="tanggalPicker"/>
                </VBox>

                <VBox spacing="6" GridPane.columnIndex="1">
                    <Label text="Jenis Transaksi"/>
                    <ComboBox fx:id="jenisBox"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1">
                    <Label text="Jumlah"/>
                    <TextField fx:id="jumlahField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label text="Saldo Modal Saat Ini"/>
                    <TextField fx:id="saldoField" editable="false"/>
                </VBox>
            </GridPane>

            <VBox spacing="6">
                <Label text="Keterangan"/>
                <TextArea fx:id="keteranganArea"
                          prefRowCount="2"/>
            </VBox>

            <HBox alignment="CENTER_RIGHT">
                <Button text="Simpan"
                        fx:id="btnSimpan"
                        disable="true"
                        onAction="#handleSimpan"
                        styleClass="btn-primary"/>
            </HBox>

        </VBox>
    </VBox>
</StackPane>