<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.ModalController"
      stylesheets="@Global.css"
      spacing="24"
      alignment="TOP_CENTER"
      style="-fx-padding: 24;">

    <!-- ===================== TITLE ===================== -->
    <Label text="Form Modal"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- ===================== FORM CARD ===================== -->
    <VBox maxWidth="520"
          alignment="CENTER"
          styleClass="card">

        <GridPane styleClass="form-grid">
            <columnConstraints>
                <ColumnConstraints prefWidth="160"/>
                <ColumnConstraints/>
            </columnConstraints>

            <children>
                <Label text="Tanggal"/>
                <DatePicker fx:id="dpTanggal"
                            GridPane.columnIndex="1"/>

                <Label text="Jenis Modal" GridPane.rowIndex="1"/>
                <ComboBox fx:id="cbJenisModal"
                          GridPane.rowIndex="1"
                          GridPane.columnIndex="1"/>

                <Label text="Jumlah" GridPane.rowIndex="2"/>
                <TextField fx:id="txtJumlah"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <Label text="Nama Pemilik" GridPane.rowIndex="3"/>
                <TextField fx:id="txtNamaPemilik"
                           GridPane.rowIndex="3"
                           GridPane.columnIndex="1"/>

                <Label text="Keterangan" GridPane.rowIndex="4"/>
                <TextField fx:id="txtKeterangan"
                           GridPane.rowIndex="4"
                           GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <!-- ===================== BUTTON ===================== -->
        <HBox spacing="12"
              alignment="CENTER_RIGHT"
              style="-fx-padding: 18 0 0 0;">
            <Button text="Simpan"
                    onAction="#handleSimpan"/>
            <Button text="Hapus"
                    styleClass="button-danger"
                    onAction="#handleHapus"/>
        </HBox>
    </VBox>

    <!-- ===================== TABLE ===================== -->
    <TableView fx:id="tableModal"
               prefHeight="360"
               maxWidth="1000">

        <columns>
            <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="140"/>
            <TableColumn fx:id="colJenis" text="Jenis Modal" prefWidth="200"/>
            <TableColumn fx:id="colJumlah" text="Jumlah" prefWidth="160"/>
            <TableColumn fx:id="colSaldo" text="Saldo Modal" prefWidth="180"/>
            <TableColumn fx:id="colPemilik" text="Pemilik" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>