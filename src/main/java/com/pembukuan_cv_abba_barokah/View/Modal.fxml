<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pembukuan_cv_abba_barokah.Controller.ModalController"
           stylesheets="@Global.css">

    <VBox spacing="20"
          maxWidth="1000"
          VBox.vgrow="ALWAYS"
          styleClass="page-container">
        <VBox spacing="20"
      maxWidth="1400"
      VBox.vgrow="ALWAYS"
      styleClass="page-container">

    <!-- ================= FORM INPUT MODAL ================= -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="30"/>
        </columnConstraints>

        <!-- Row 1 -->
        <Label text="Tanggal"/>
        <DatePicker fx:id="dpTanggal" GridPane.columnIndex="1"/>

        <Label text="Jenis Modal" GridPane.columnIndex="2"/>
        <ComboBox fx:id="cbJenisModal" GridPane.columnIndex="3"/>

        <!-- Row 2 -->
        <Label text="Jumlah" GridPane.rowIndex="1"/>
        <TextField fx:id="tfJumlah" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Nama Pemilik" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="tfNamaPemilik" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

        <!-- Row 3 -->
        <Label text="Keterangan" GridPane.rowIndex="2"/>
        <TextField fx:id="tfKeterangan"
                   GridPane.columnIndex="1"
                   GridPane.rowIndex="2"
                   GridPane.columnSpan="3"/>
    </GridPane>

    <!-- ================= BUTTON ACTION ================= -->
    <HBox spacing="10">
        <Button text="Tambah Modal"
                onAction="#handleTambahModal"
                styleClass="btn-primary"/>
        <Button text="Hapus"
                onAction="#handleHapus"
                styleClass="btn-danger"/>
    </HBox>

    <!-- ================= TABLE VIEW ================= -->
    <TableView fx:id="tableModal" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="120"/>
            <TableColumn fx:id="colJenis" text="Jenis Modal" prefWidth="120"/>
            <TableColumn fx:id="colJumlah" text="Jumlah" prefWidth="150"/>
            <TableColumn fx:id="colPemilik" text="Pemilik" prefWidth="180"/>
            <TableColumn fx:id="colSaldo" text="Saldo" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>

    </VBox>
</StackPane>