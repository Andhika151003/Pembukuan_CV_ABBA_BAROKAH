<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.CashflowPenjualanController"
      spacing="24"
      stylesheets="@Global.css"
      styleClass="content">

    <HBox alignment="CENTER">
        <Label text="Cashflow Penjualan Barang Bulanan"
               style="-fx-font-size: 24px; -fx-font-weight: bold"/>
    </HBox>

    <HBox spacing="12" alignment="CENTER">
        <Label text="Bulan"/>
        <ComboBox fx:id="cbBulan"/>
        <Label text="Tahun"/>
        <ComboBox fx:id="cbTahun"/>
        <Button text="Tampilkan" onAction="#loadData"/>
    </HBox>

    <TableView fx:id="table" prefHeight="480">
        <columns>
            <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="120"/>
            <TableColumn fx:id="colFaktur" text="No Faktur" prefWidth="140"/>
            <TableColumn fx:id="colPenjualan" text="Nominal Penjualan" prefWidth="160"/>
            <TableColumn fx:id="colPembayaran" text="Nominal Pembayaran" prefWidth="160"/>
            <TableColumn fx:id="colLaba" text="Laba" prefWidth="140"/>
            <TableColumn fx:id="colPph" text="PPh 11%" prefWidth="140"/>
            <TableColumn fx:id="colId" text="ID Penjualan" prefWidth="120"/>
        </columns>
    </TableView>

</VBox>