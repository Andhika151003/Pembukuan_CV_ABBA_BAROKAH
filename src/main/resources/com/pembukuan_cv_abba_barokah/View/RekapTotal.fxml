<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.RekapTotalController"
      spacing="24"
      alignment="TOP_CENTER"
      stylesheets="@Global.css"
      styleClass="content">

    <!-- ================= TITLE ================= -->
    <HBox alignment="CENTER">
        <Label text="Jumlah Total 2026"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- ================= CARD ================= -->
    <StackPane VBox.vgrow="ALWAYS">
        <VBox maxWidth="700" styleClass="card">

            <GridPane hgap="28" vgap="14">
                <columnConstraints>
                    <ColumnConstraints percentWidth="60"/>
                    <ColumnConstraints percentWidth="40"/>
                </columnConstraints>

                <!-- ===== HPP ===== -->
                <Label text="Total Harga Pokok Penjualan (HPP)"
                       style="-fx-font-weight: bold;"/>
                <Label fx:id="lblTotalHpp"
                       GridPane.columnIndex="1"
                       style="-fx-font-weight: bold;"/>

                <!-- ===== TOTAL PENJUALAN ===== -->
                <Label text="Total Penjualan" GridPane.rowIndex="1"/>
                <Label fx:id="lblTotalPenjualan"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="1"/>

                <Label text="Total Pembayaran dari Pembeli" GridPane.rowIndex="2"/>
                <Label fx:id="lblTotalPembayaran"
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="1"/>

                <Label text="Total Biaya Pemasaran" GridPane.rowIndex="3"/>
                <Label fx:id="lblTotalBiayaPemasaran"
                       GridPane.rowIndex="3"
                       GridPane.columnIndex="1"/>

                <Label text="Total Setor Pajak" GridPane.rowIndex="4"/>
                <Label fx:id="lblTotalSetorPajak"
                       GridPane.rowIndex="4"
                       GridPane.columnIndex="1"/>
            </GridPane>

        </VBox>
    </StackPane>

</VBox>