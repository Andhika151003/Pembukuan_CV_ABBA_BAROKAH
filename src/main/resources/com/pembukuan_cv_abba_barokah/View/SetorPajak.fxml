<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.SetorPajakController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <!-- TITLE -->
    <HBox alignment="CENTER">
        <Label text="Setor Pajak"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <!-- FORM -->
    <StackPane>
        <VBox maxWidth="700"
              spacing="18"
              styleClass="card">

            <GridPane hgap="15" vgap="12">

                <columnConstraints>
                    <ColumnConstraints prefWidth="160"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <Label text="Tanggal Setor"/>
                <DatePicker fx:id="tanggalField"
                            GridPane.columnIndex="1"/>

                <Label text="Jenis Pajak"
                       GridPane.rowIndex="1"/>
                <ComboBox fx:id="cbJenisPajak"
                          prefWidth="250"
                          GridPane.rowIndex="1"
                          GridPane.columnIndex="1"/>

                <Label text="Jumlah Pajak"
                       GridPane.rowIndex="2"/>
                <TextField fx:id="jumlahField"
                           promptText="Masukkan jumlah pajak"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <Label text="Keterangan"
                       GridPane.rowIndex="3"/>
                <TextArea fx:id="keteranganField"
                          prefRowCount="3"
                          wrapText="true"
                          GridPane.rowIndex="3"
                          GridPane.columnIndex="1"/>

                <Label text="Bukti Setor"
                       GridPane.rowIndex="4"/>

                <HBox spacing="10"
                      GridPane.rowIndex="4"
                      GridPane.columnIndex="1">

                    <TextField fx:id="buktiField"
                               editable="false"
                               HBox.hgrow="ALWAYS"
                               promptText="Belum ada file dipilih"/>

                    <Button text="Browse"
                            onAction="#handleBrowse"/>
                </HBox>

            </GridPane>

            <HBox spacing="12"
                  alignment="CENTER_RIGHT"
                  style="-fx-padding: 10 0 0 0;">

                <Button text="Simpan"
                        onAction="#handleSimpan"/>

                <Button text="Update"
                        onAction="#handleUpdate"/>

                <Button text="Hapus"
                        onAction="#handleDelete"
                        styleClass="button-danger"/>

            </HBox>

        </VBox>
    </StackPane>

    <!-- TABLE -->
    <TableView fx:id="tablePajak"
               prefHeight="380">

        <columns>

            <TableColumn fx:id="colTanggal"
                         text="Tanggal"
                         prefWidth="120"/>

            <TableColumn fx:id="colJenis"
                         text="Jenis Pajak"
                         prefWidth="130"/>

            <TableColumn fx:id="colJumlah"
                         text="Jumlah Pajak"
                         prefWidth="140"/>

            <TableColumn fx:id="colKeterangan"
                         text="Keterangan"
                         prefWidth="200"/>

            <TableColumn fx:id="colBukti"
                         text="Bukti"
                         prefWidth="100"/>

        </columns>

    </TableView>

</VBox>