<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.BiayaPemasaranController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <HBox alignment="CENTER">
        <Label text="Biaya Pemasaran"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <StackPane>
        <VBox maxWidth="650" styleClass="card">

            <GridPane styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints prefWidth="160"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <children>
                    <Label text="Tanggal"/>
                    <DatePicker fx:id="tanggalField"
                                GridPane.columnIndex="1"/>

                    <Label text="Deskripsi"
                           GridPane.rowIndex="1"/>
                    <TextField fx:id="deskripsiField"
                               GridPane.rowIndex="1"
                               GridPane.columnIndex="1"/>

                    <Label text="Jumlah Biaya Pemasaran"
                           GridPane.rowIndex="2"/>
                    <TextField fx:id="jumlahField"
                               GridPane.rowIndex="2"
                               GridPane.columnIndex="1"/>

                    <Label text="Kategori"
                           GridPane.rowIndex="3"/>
                    <TextField fx:id="kategoriField"
                               GridPane.rowIndex="3"
                               GridPane.columnIndex="1"/>

                    <Label text="Jenis Pemasaran"
                           GridPane.rowIndex="4"/>
                    <ComboBox fx:id="cbMarketingType"
                              GridPane.rowIndex="4"
                              GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="12">
                <Button text="Simpan"
                        onAction="#handleSimpan"/>
                <Button text="Update"
                        onAction="#handleUpdate"/>
                <Button text="Hapus"
                        onAction="#handleDelete"
                        styleClass="button-danger"/>
            </HBox>
        </VBox>
    </StackPane>

    <TableView fx:id="tablePemasaran" prefHeight="300" onMouseClicked="#handleTableClick">
        <columns>
            <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="120"/>
            <TableColumn fx:id="colDeskripsi" text="Deskripsi" prefWidth="200"/>
            <TableColumn fx:id="colJumlah" text="Jumlah Biaya Pemasaran" prefWidth="120"/>
            <TableColumn fx:id="colKategori" text="Kategori" prefWidth="120"/>
            <TableColumn fx:id="colType" text="Marketing Type" prefWidth="140"/>
        </columns>
    </TableView>

</VBox>