<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.PembayaranController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <!-- ================= TITLE ================= -->
    <HBox alignment="CENTER">
        <Label text="Pembayaran"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <!-- ================= FORM ================= -->
    <StackPane>
        <VBox maxWidth="600" styleClass="card">

            <GridPane styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints prefWidth="160"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <children>
                    <Label text="Tanggal"/>
                    <DatePicker fx:id="tanggalField"
                                GridPane.columnIndex="1"/>

                    <Label text="Jumlah Pembayaran"
                           GridPane.rowIndex="1"/>
                    <TextField fx:id="jumlahField"
                               GridPane.rowIndex="1"
                               GridPane.columnIndex="1"/>

                    <Label text="Metode Pembayaran"
                           GridPane.rowIndex="2"/>
                    <ComboBox fx:id="cbMetode"
                              GridPane.rowIndex="2"
                              GridPane.columnIndex="1"/>

                    <Label text="ID Penjualan"
                           GridPane.rowIndex="3"/>
                    <ComboBox fx:id="cbIdPenjualan"
                              GridPane.rowIndex="3"
                              GridPane.columnIndex="1"/>

                    <Label text="Keterangan"
                           GridPane.rowIndex="4"/>
                    <TextField fx:id="keteranganField"
                               GridPane.rowIndex="4"
                               GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <!-- ================= BUTTON ================= -->
            <HBox spacing="12"
                  alignment="CENTER_RIGHT"
                  style="-fx-padding: 18 0 0 0;">
                <Button text="Simpan"
                        onAction="#handleSimpan"/>
                <Button text="Update"
                        onAction="#handleUpdate"/>
                <Button text="Hapus"
                        onAction="#handleDelete" styleClass="button-danger"/>
            </HBox>

        </VBox>
    </StackPane>

    <!-- ================= TABLE ================= -->
    <TableView fx:id="tablePembayaran" prefHeight="320">
        <columns>
            <TableColumn fx:id="colTanggal"
                         text="Tanggal"
                         prefWidth="120"/>
            <TableColumn fx:id="colJumlah"
                         text="Jumlah"
                         prefWidth="120"/>
            <TableColumn fx:id="colMetode"
                         text="Metode"
                         prefWidth="140"/>
            <TableColumn fx:id="colIdPenjualan"
                         text="ID Penjualan"
                         prefWidth="120"/>
        </columns>
    </TableView>

</VBox>