<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.ReturPembelianController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <HBox alignment="CENTER">
        <Label text="Retur Pembelian"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <StackPane>
        <VBox maxWidth="750" spacing="20" styleClass="card">

            <GridPane hgap="16" vgap="14">
                <columnConstraints>
                    <ColumnConstraints prefWidth="200"/>
                    <ColumnConstraints prefWidth="450"/>
                </columnConstraints>

                <Label text="No Retur Pembelian"/>
                <TextField fx:id="noReturField"
                           GridPane.columnIndex="1"/>

                <Label text="Tanggal Retur"
                       GridPane.rowIndex="1"/>
                <DatePicker fx:id="tanggalReturField"
                            GridPane.rowIndex="1"
                            GridPane.columnIndex="1"/>

                <Label text="Jumlah Retur"
                       GridPane.rowIndex="2"/>
                <TextField fx:id="jumlahReturField"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <Label text="Keterangan Retur"
                       GridPane.rowIndex="3"/>
                <TextField fx:id="keteranganReturField"
                           GridPane.rowIndex="3"
                           GridPane.columnIndex="1"/>

                <Label text="ID Pembelian"
                       GridPane.rowIndex="4"/>
                <ComboBox fx:id="cbIdPembelian"
                          GridPane.rowIndex="4"
                          GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button text="Simpan" onAction="#handleSimpan"/>
                <Button text="Update" onAction="#handleUpdate"/>
                <Button text="Hapus"
                        styleClass="button-danger"
                        onAction="#handleHapus"/>
            </HBox>

        </VBox>
    </StackPane>

    <TableView fx:id="tableRetur" prefHeight="380">
        <columns>

            <TableColumn fx:id="colNo"
                         text="No Retur"
                         prefWidth="130"/>

            <TableColumn fx:id="colTanggal"
                         text="Tanggal"
                         prefWidth="130"/>

            <TableColumn fx:id="colJumlah"
                         text="Jumlah"
                         prefWidth="100"/>

            <TableColumn fx:id="colKeterangan"
                         text="Keterangan"
                         prefWidth="200"/>

            <TableColumn fx:id="colIdPembelian"
                         text="ID Pembelian"
                         prefWidth="130"/>

        </columns>
    </TableView>

</VBox>