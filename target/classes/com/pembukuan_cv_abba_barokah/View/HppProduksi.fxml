<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pembukuan_cv_abba_barokah.Controller.HppProduksiController"
           alignment="TOP_CENTER"
           stylesheets="@Global.css">

    <VBox spacing="24" maxWidth="1000" styleClass="page-container">

        <Label text="HPP Produksi"
               style="-fx-font-size: 22; -fx-font-weight: bold;"/>

        <VBox spacing="24" styleClass="card">

            <GridPane hgap="20" vgap="16">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- TANGGAL HPP PRODUKSI (MANUAL) -->
                <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <Label text="Tanggal HPP Produksi"/>
                    <DatePicker fx:id="tanggalProduksiPicker"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="1">
                    <Label text="Nama Produk"/>
                    <TextField fx:id="namaProdukField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <Label text="Jumlah Produksi"/>
                    <TextField fx:id="jumlahProduksiField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label text="Biaya Bahan Mentah"/>
                    <TextField fx:id="bahanMentahField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="2" GridPane.columnIndex="0">
                    <Label text="Biaya Tenaga Kerja"/>
                    <TextField fx:id="tenagaKerjaField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <Label text="Biaya Overhead"/>
                    <TextField fx:id="overheadField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="3" GridPane.columnIndex="0">
                    <Label text="Biaya Proses"/>
                    <TextField fx:id="biayaProsesField"/>
                </VBox>

                <VBox spacing="6" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <Label text="HPP per Unit"/>
                    <TextField fx:id="hppUnitField" editable="false"/>
                </VBox>
            </GridPane>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button fx:id="btnHitung"
                        text="Hitung HPP"
                        onAction="#handleHitung"
                        styleClass="btn-primary"/>

                <Button fx:id="btnSimpan"
                        text="Simpan"
                        disable="true"
                        onAction="#handleSimpan"
                        styleClass="btn-success"/>
            </HBox>

        </VBox>
    </VBox>
</StackPane>