<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pembukuan_cv_abba_barokah.Controller.PphController"
           style="-fx-background-color: #f5f6fa;">

    <VBox spacing="24" alignment="CENTER" maxWidth="700">
        <padding>
            <Insets top="32" right="32" bottom="32" left="32"/>
        </padding>

        <Label text="PPH 11%"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

        <VBox spacing="18"
              style="-fx-background-color: white;
                     -fx-padding: 24;
                     -fx-background-radius: 14;">

            <GridPane hgap="20" vgap="16">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>

                <!-- LABA KOTOR -->
                <Label text="Laba Kotor"
                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="labaKotorLabel"
                       text="Rp 0"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- TARIF -->
                <Label text="Tarif PPH"
                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label text="11%"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- HASIL -->
                <Label text="PPH 11%"
                       style="-fx-font-weight: bold;"
                       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="pphLabel"
                       text="Rp 0"
                       style="-fx-font-weight: bold;"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

        </VBox>
    </VBox>
</StackPane>