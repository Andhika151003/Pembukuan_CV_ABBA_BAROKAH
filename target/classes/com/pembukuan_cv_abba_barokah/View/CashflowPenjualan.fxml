<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.CashflowPenjualanController"
      spacing="20"
      alignment="CENTER"
      stylesheets="@Global.css"
      styleClass="content">

    <Label text="Cashflow Penjualan Bulanan"
           style="-fx-font-size: 22px; -fx-font-weight: bold"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Bulan"/>
        <ComboBox fx:id="cbBulan" prefWidth="80"/>
        <Label text="Tahun"/>
        <ComboBox fx:id="cbTahun" prefWidth="100"/>
        <Button text="Tampilkan" onAction="#loadData"/>
    </HBox>

    <TableView fx:id="table" prefHeight="420" maxWidth="900">

        <columns>
            <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="120"/>
            <TableColumn fx:id="colNoFaktur" text="No Faktur" prefWidth="150"/>
            <TableColumn fx:id="colPenjualan" text="Nominal Penjualan" prefWidth="200"/>
            <TableColumn fx:id="colPembayaran" text="Nominal Pembayaran" prefWidth="200"/>
            <TableColumn fx:id="colPph" text="PPh 11%" prefWidth="150"/>
        </columns>

    </TableView>

</VBox>