<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.ReturPenjualanController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <!-- ================= TITLE ================= -->
    <HBox alignment="CENTER">
        <Label text="Retur Penjualan"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- ================= FORM ================= -->
    <StackPane>
        <VBox maxWidth="800"
              spacing="20"
              styleClass="card">

            <GridPane hgap="16"
                      vgap="14">

                <columnConstraints>
                    <ColumnConstraints prefWidth="200"/>
                    <ColumnConstraints prefWidth="480"/>
                </columnConstraints>

                <!-- No Retur -->
                <Label text="No Retur"/>
                <TextField fx:id="noReturField"
                           promptText="Contoh: RT-001"
                           GridPane.columnIndex="1"/>

                <!-- Tanggal Retur -->
                <Label text="Tanggal Retur"
                       GridPane.rowIndex="1"/>
                <DatePicker fx:id="tanggalReturField"
                            GridPane.rowIndex="1"
                            GridPane.columnIndex="1"/>

                <!-- Jumlah Retur -->
                <Label text="Jumlah Retur"
                       GridPane.rowIndex="2"/>
                <TextField fx:id="jumlahReturField"
                           promptText="Masukkan angka"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <!-- Keterangan -->
                <Label text="Keterangan Retur"
                       GridPane.rowIndex="3"/>
                <TextField fx:id="keteranganReturField"
                           GridPane.rowIndex="3"
                           GridPane.columnIndex="1"/>

                <!-- ID Penjualan -->
                <Label text="ID Penjualan"
                       GridPane.rowIndex="4"/>
                <ComboBox fx:id="cbIdPenjualan"
                          GridPane.rowIndex="4"
                          GridPane.columnIndex="1"/>

            </GridPane>

            <!-- ================= BUTTON ================= -->
            <HBox spacing="12"
                  alignment="CENTER_RIGHT">

                <Button text="Simpan"
                        styleClass="button-primary"
                        onAction="#handleSimpan"/>

                <Button text="Update"
                        onAction="#handleUpdate"/>

                <Button text="Hapus"
                        styleClass="button-danger"
                        onAction="#handleHapus"/>

            </HBox>

        </VBox>
    </StackPane>

    <!-- ================= TABLE ================= -->
    <TableView fx:id="tableRetur"
               prefHeight="400">

        <columns>

            <TableColumn fx:id="colNo"
                         text="No Retur"
                         prefWidth="150"/>

            <TableColumn fx:id="colTanggal"
                         text="Tanggal Retur"
                         prefWidth="130"/>

            <TableColumn fx:id="colJumlah"
                         text="Jumlah Retur"
                         prefWidth="120"/>

            <TableColumn fx:id="colKeterangan"
                         text="Keterangan"
                         prefWidth="220"/>

            <TableColumn fx:id="colIdPenjualan"
                         text="ID Penjualan"
                         prefWidth="140"/>

        </columns>

    </TableView>

</VBox>