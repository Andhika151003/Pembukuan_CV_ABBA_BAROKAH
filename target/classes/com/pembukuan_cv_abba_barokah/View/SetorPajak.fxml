<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.SetorPajakController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <!-- ================= TITLE ================= -->
    <HBox alignment="CENTER">
        <Label text="Setor Pajak"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <!-- ================= FORM ================= -->
    <StackPane>
        <VBox maxWidth="600" styleClass="card">

            <GridPane styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints prefWidth="160"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <children>

                    <Label text="Tanggal Setor"/>
                    <DatePicker fx:id="tanggalField"
                                GridPane.columnIndex="1"/>

                    <Label text="Jenis Pajak"
                           GridPane.rowIndex="1"/>
                    <ComboBox fx:id="cbJenisPajak"
                              GridPane.rowIndex="1"
                              GridPane.columnIndex="1"/>

                    <Label text="Jumlah Pajak"
                           GridPane.rowIndex="2"/>
                    <TextField fx:id="jumlahField"
                               GridPane.rowIndex="2"
                               GridPane.columnIndex="1"/>

                    <Label text="Periode"
                           GridPane.rowIndex="3"/>
                    <TextField fx:id="periodeField"
                               GridPane.rowIndex="3"
                               GridPane.columnIndex="1"/>

                    <Label text="Bukti Setor"
                           GridPane.rowIndex="4"/>
                    <TextField fx:id="buktiField"
                               GridPane.rowIndex="4"
                               GridPane.columnIndex="1"/>

                    <Label text="ID Penjualan"
                           GridPane.rowIndex="5"/>
                    <ComboBox fx:id="cbIdPenjualan"
                              GridPane.rowIndex="5"
                              GridPane.columnIndex="1"/>

                </children>
            </GridPane>

            <!-- ================= BUTTON ================= -->
            <HBox spacing="12"
                  alignment="CENTER_RIGHT"
                  style="-fx-padding: 18 0 0 0;">

                <Button text="Simpan"
                        onAction="#handleSimpan"/>

                <Button text="Update"
                        onAction="#handleUpdate"/>

                <Button text="Hapus"
                        onAction="#handleDelete"
                        styleClass="button-danger"/>

            </HBox>

        </VBox>
    </StackPane>

    <!-- ================= TABLE ================= -->
    <TableView fx:id="tablePajak"
               prefHeight="320">

        <columns>
            <TableColumn fx:id="colTanggal"
                         text="Tanggal"
                         prefWidth="120"/>

            <TableColumn fx:id="colJenis"
                         text="Jenis Pajak"
                         prefWidth="140"/>

            <TableColumn fx:id="colJumlah"
                         text="Jumlah Pajak"
                         prefWidth="120"/>

            <TableColumn fx:id="colPeriode"
                         text="Periode"
                         prefWidth="120"/>

            <TableColumn fx:id="colIdPenjualan"
                         text="ID Penjualan"
                         prefWidth="120"/>
        </columns>

    </TableView>

</VBox>