<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.RekapTotalController"
      spacing="24"
      alignment="TOP_CENTER"
      stylesheets="@Global.css"
      styleClass="content">

    <!-- ================= TITLE ================= -->
    <HBox alignment="CENTER">
        <Label text="Rekapitulasi Total Keuangan"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- ================= CENTER WRAPPER ================= -->
    <StackPane VBox.vgrow="ALWAYS">

        <!-- ================= CARD ================= -->
        <VBox maxWidth="700"
              styleClass="card">

            <GridPane hgap="28" vgap="14">

                <columnConstraints>
                    <ColumnConstraints percentWidth="60"/>
                    <ColumnConstraints percentWidth="40"/>
                </columnConstraints>

                <!-- ===== TOTAL ===== -->
                <Label text="Total Penjualan"/>
                <Label fx:id="lblTotalPenjualan" GridPane.columnIndex="1"/>

                <Label text="Total HPP" GridPane.rowIndex="1"/>
                <Label fx:id="lblTotalHpp"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="1"/>

                <Label text="Total Pembayaran dari Pembeli" GridPane.rowIndex="2"/>
                <Label fx:id="lblTotalPembayaran"
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="1"/>

                <Label text="Total Biaya Pemasaran" GridPane.rowIndex="3"/>
                <Label fx:id="lblTotalBiayaPemasaran"
                       GridPane.rowIndex="3"
                       GridPane.columnIndex="1"/>

                <Label text="Total Biaya Operasional" GridPane.rowIndex="4"/>
                <Label fx:id="lblTotalBiayaOperasional"
                       GridPane.rowIndex="4"
                       GridPane.columnIndex="1"/>

                <Label text="Total Setor Pajak" GridPane.rowIndex="5"/>
                <Label fx:id="lblTotalSetorPajak"
                       GridPane.rowIndex="5"
                       GridPane.columnIndex="1"/>

                <Separator GridPane.rowIndex="6"
                           GridPane.columnSpan="2"/>

                <!-- ===== LABA ===== -->
                <Label text="Laba Kotor" GridPane.rowIndex="7"/>
                <Label fx:id="lblLabaKotor"
                       GridPane.rowIndex="7"
                       GridPane.columnIndex="1"/>

                <Label text="PPh Final 11%" GridPane.rowIndex="8"/>
                <Label fx:id="lblPph11"
                       GridPane.rowIndex="8"
                       GridPane.columnIndex="1"/>

                <Label text="Pajak Belum Disetor" GridPane.rowIndex="9"/>
                <Label fx:id="lblPajakBelumDisetor"
                       GridPane.rowIndex="9"
                       GridPane.columnIndex="1"/>

                <Separator GridPane.rowIndex="10"
                           GridPane.columnSpan="2"/>

                <!-- ===== LABA BERSIH ===== -->
                <Label text="Laba Bersih"
                       GridPane.rowIndex="11"
                       styleClass="bold"/>
                <Label fx:id="lblLabaBersih"
                       GridPane.rowIndex="11"
                       GridPane.columnIndex="1"
                       styleClass="bold"/>

            </GridPane>
        </VBox>
    </StackPane>

</VBox>