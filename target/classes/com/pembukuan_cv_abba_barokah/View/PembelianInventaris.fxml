<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.PembelianInventarisController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <!-- ================= TITLE ================= -->
    <HBox alignment="CENTER">
        <Label text="Pembelian Inventaris"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- ================= FORM ================= -->
    <StackPane>
        <VBox maxWidth="850" spacing="20" styleClass="card">

            <GridPane hgap="16" vgap="14">

                <columnConstraints>
                    <ColumnConstraints prefWidth="200"/>
                    <ColumnConstraints prefWidth="450"/>
                </columnConstraints>

                <!-- TANGGAL -->
                <Label text="Tanggal Pembelian"/>
                <DatePicker fx:id="tanggalField"
                            GridPane.columnIndex="1"/>

                <!-- NO PEMBELIAN -->
                <Label text="No Pembelian"
                       GridPane.rowIndex="1"/>
                <TextField fx:id="noPembelianField"
                           promptText="Contoh: PB-001"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>

                <!-- NAMA BARANG -->
                <Label text="Nama Barang"
                       GridPane.rowIndex="2"/>
                <TextField fx:id="namaBarangField"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <!-- JUMLAH -->
                <Label text="Jumlah"
                       GridPane.rowIndex="3"/>
                <TextField fx:id="jumlahField"
                           promptText="Masukkan angka"
                           GridPane.rowIndex="3"
                           GridPane.columnIndex="1"/>

                <!-- SATUAN -->
                <Label text="Satuan"
                       GridPane.rowIndex="4"/>
                <TextField fx:id="satuanField"
                           promptText="pcs / unit / set"
                           GridPane.rowIndex="4"
                           GridPane.columnIndex="1"/>

                <!-- HARGA SATUAN -->
                <Label text="Harga Satuan"
                       GridPane.rowIndex="5"/>
                <TextField fx:id="hargaSatuanField"
                           promptText="Masukkan nominal"
                           GridPane.rowIndex="5"
                           GridPane.columnIndex="1"/>

                <!-- ONGKOS KIRIM -->
                <Label text="Ongkos Kirim"
                       GridPane.rowIndex="6"/>
                <TextField fx:id="ongkosKirimField"
                           promptText="0 jika tidak ada"
                           GridPane.rowIndex="6"
                           GridPane.columnIndex="1"/>

                <!-- KETERANGAN -->
                <Label text="Keterangan"
                       GridPane.rowIndex="7"/>
                <TextField fx:id="keteranganField"
                           GridPane.rowIndex="7"
                           GridPane.columnIndex="1"/>

            </GridPane>

            <!-- ================= BUTTON ================= -->
            <HBox spacing="12"
                  alignment="CENTER_RIGHT">

                <Button text="Simpan"
                        styleClass="button-primary"
                        onAction="#handleSimpan"/>

                <Button text="Update"
                        onAction="#handleUpdate"/>

                <Button text="Hapus"
                        styleClass="button-danger"
                        onAction="#handleHapus"/>
            </HBox>

        </VBox>
    </StackPane>

    <!-- ================= TABLE ================= -->
    <TableView fx:id="tableInventaris" prefHeight="400">

    <columns>

        <TableColumn fx:id="colId"
                     text="ID"
                     prefWidth="70"/>

        <TableColumn fx:id="colNo"
                     text="No Pembelian"
                     prefWidth="130"/>

        <TableColumn fx:id="colNama"
                     text="Nama Barang"
                     prefWidth="200"/>

        <TableColumn fx:id="colJumlah"
                     text="Jumlah"
                     prefWidth="80"/>

        <TableColumn fx:id="colSatuan"
                     text="Satuan"
                     prefWidth="90"/>

        <TableColumn fx:id="colHarga"
                     text="Harga Satuan"
                     prefWidth="120"/>

        <TableColumn fx:id="colOngkir"
                     text="Ongkos Kirim"
                     prefWidth="120"/>

        <TableColumn fx:id="colTotal"
                     text="Total"
                     prefWidth="140"/>

        <TableColumn fx:id="colTanggal"
                     text="Tanggal"
                     prefWidth="120"/>

        <TableColumn fx:id="colKeterangan"
                     text="Keterangan"
                     prefWidth="180"/>

    </columns>

</TableView>


</VBox>