<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.PembelianInventarisController"
      stylesheets="@Global.css"
      spacing="28"
      styleClass="content">

    <!-- ================= TITLE ================= -->
    <HBox alignment="CENTER">
        <Label text="Pembelian Inventaris"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    </HBox>

    <!-- ================= FORM ================= -->
    <StackPane>
        <VBox maxWidth="720" styleClass="card" spacing="20">

            <GridPane hgap="16" vgap="14" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints prefWidth="200"/>
                    <ColumnConstraints prefWidth="420"/>
                </columnConstraints>

                <!-- Tanggal -->
                <Label text="Tanggal Pembelian"/>
                <DatePicker fx:id="tanggalField"
                            GridPane.columnIndex="1"/>

                <!-- No Pembelian -->
                <Label text="No Pembelian" GridPane.rowIndex="1"/>
                <TextField fx:id="noPembelianField"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>

                <!-- Jenis Inventaris -->
                <Label text="Jenis Inventaris" GridPane.rowIndex="2"/>
                <TextField fx:id="jenisInventarisField"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <!-- Nama Barang -->
                <Label text="Nama Barang" GridPane.rowIndex="3"/>
                <TextField fx:id="namaBarangField"
                           GridPane.rowIndex="3"
                           GridPane.columnIndex="1"/>

                <!-- Jumlah -->
                <Label text="Jumlah" GridPane.rowIndex="4"/>
                <TextField fx:id="jumlahField"
                           GridPane.rowIndex="4"
                           GridPane.columnIndex="1"/>

                <!-- Satuan -->
                <Label text="Satuan" GridPane.rowIndex="5"/>
                <TextField fx:id="satuanField"
                           promptText="pcs / unit / set"
                           GridPane.rowIndex="5"
                           GridPane.columnIndex="1"/>

                <!-- Harga Satuan -->
                <Label text="Harga Satuan" GridPane.rowIndex="6"/>
                <TextField fx:id="hargaSatuanField"
                           GridPane.rowIndex="6"
                           GridPane.columnIndex="1"/>

                <!-- Ongkos Kirim -->
                <Label text="Ongkos Kirim" GridPane.rowIndex="7"/>
                <TextField fx:id="ongkosKirimField"
                           GridPane.rowIndex="7"
                           GridPane.columnIndex="1"/>

                <!-- Keterangan -->
                <Label text="Keterangan" GridPane.rowIndex="8"/>
                <TextField fx:id="keteranganField"
                           GridPane.rowIndex="8"
                           GridPane.columnIndex="1"/>
            </GridPane>

            <!-- ================= BUTTON ================= -->
            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button text="Simpan"
                        styleClass="button-primary"
                        onAction="#handleSimpan"/>
                <Button text="Update"
                        onAction="#handleUpdate"/>
                <Button text="Hapus"
                        styleClass="button-danger"
                        onAction="#handleHapus"/>
            </HBox>

        </VBox>
    </StackPane>

    <!-- ================= TABLE ================= -->
    <TableView fx:id="tableInventaris"
               prefHeight="380"
               styleClass="table-view">

        <columns>
            <TableColumn fx:id="colNoPembelian"
                         text="No Pembelian"
                         prefWidth="160"/>

            <TableColumn fx:id="colNamaBarang"
                         text="Nama Barang"
                         prefWidth="260"/>

            <TableColumn fx:id="colJumlah"
                         text="Jumlah"
                         prefWidth="100"/>

            <TableColumn fx:id="colHarga"
                         text="Harga Satuan"
                         prefWidth="160"/>
        </columns>

    </TableView>

</VBox>