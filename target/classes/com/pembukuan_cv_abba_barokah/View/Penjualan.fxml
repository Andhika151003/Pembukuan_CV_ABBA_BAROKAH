<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pembukuan_cv_abba_barokah.Controller.PenjualanController"
           stylesheets="@Global.css">

    <VBox spacing="20"
          maxWidth="1400"
          VBox.vgrow="ALWAYS"
          styleClass="page-container">

        <!-- ================= FORM INPUT PENJUALAN ================= -->
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="20"/>
                <ColumnConstraints percentWidth="30"/>
            </columnConstraints>

            <!-- Row 1 -->
            <Label text="No Penjualan"/>
            <TextField fx:id="tfNoPenjualan" GridPane.columnIndex="1"/>

            <Label text="Tanggal" GridPane.columnIndex="2"/>
            <DatePicker fx:id="dpTanggal" GridPane.columnIndex="3"/>

            <!-- Row 2 -->
            <Label text="Customer" GridPane.rowIndex="1"/>
            <TextField fx:id="tfCustomer"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>

            <Label text="Alamat" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <TextField fx:id="tfAlamat"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="1"/>

            <!-- Row 3 -->
            <Label text="Total Penjualan" GridPane.rowIndex="2"/>
            <TextField fx:id="tfTotal"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>

            <Label text="Metode Pembayaran" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <ComboBox fx:id="cbMetode"
                      GridPane.columnIndex="3"
                      GridPane.rowIndex="2"/>

            <!-- Row 4 -->
            <Label text="Status Pembayaran" GridPane.rowIndex="3"/>
            <ComboBox fx:id="cbStatus"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="3"/>

            <!-- Row 5 -->
            <Label text="Keterangan" GridPane.rowIndex="4"/>
            <TextField fx:id="tfKeterangan"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="4"
                       GridPane.columnSpan="3"/>
        </GridPane>

        <!-- ================= BUTTON ACTION ================= -->
        <HBox spacing="10">
            <Button text="Simpan"
                    onAction="#handleSimpan"
                    styleClass="btn-primary"/>
            <Button text="Update"
                    onAction="#handleUpdate"
                    styleClass="btn-warning"/>
            <Button text="Hapus"
                    onAction="#handleHapus"
                    styleClass="btn-danger"/>
        </HBox>

        <!-- ================= TABLE VIEW ================= -->
        <TableView fx:id="tablePenjualan" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNo"
                             text="No Penjualan"
                             prefWidth="150"/>
                <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="120"/>
                <TableColumn fx:id="colCustomer"
                             text="Customer"
                             prefWidth="250"/>
                <TableColumn fx:id="colAlamat" text="Alamat" prefWidth="220"/>
                <TableColumn fx:id="colTotal"
                             text="Total"
                             prefWidth="150"/>
                <TableColumn fx:id="colMetode" text="Metode" prefWidth="140"/>
                <TableColumn fx:id="colStatus"
                             text="Status"
                             prefWidth="150"/>
                <TableColumn fx:id="colKeterangan" text="Keterangan" prefWidth="250"/>
            </columns>
        </TableView>

    </VBox>
</StackPane>