<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.BiayaPemasaranController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <!-- ===================== TITLE ===================== -->
    <HBox alignment="CENTER">
        <Label text="Biaya Pemasaran"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <!-- ===================== FORM ===================== -->
    <StackPane>
        <VBox maxWidth="520" styleClass="card">

            <GridPane styleClass="form-grid">
                <columnConstraints>
                    <ColumnConstraints prefWidth="160"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <children>
                    <Label text="Tanggal"/>
                    <DatePicker fx:id="dpTanggal"
                                GridPane.columnIndex="1"/>

                    <Label text="Deskripsi" GridPane.rowIndex="1"/>
                    <TextField fx:id="txtDeskripsi"
                               GridPane.rowIndex="1"
                               GridPane.columnIndex="1"/>

                    <Label text="Jumlah" GridPane.rowIndex="2"/>
                    <TextField fx:id="txtJumlah"
                               GridPane.rowIndex="2"
                               GridPane.columnIndex="1"/>

                    <Label text="Kategori" GridPane.rowIndex="3"/>
                    <ComboBox fx:id="cbKategori"
                              GridPane.rowIndex="3"
                              GridPane.columnIndex="1"/>

                    <Label text="Jenis Biaya Marketing" GridPane.rowIndex="4"/>
                    <ComboBox fx:id="cbMarketingType"
                              GridPane.rowIndex="4"
                              GridPane.columnIndex="1"/>
                </children>
            </GridPane>

            <!-- ===================== BUTTON ===================== -->
            <HBox spacing="12"
                  alignment="CENTER_RIGHT"
                  style="-fx-padding: 18 0 0 0;">
                <Button text="Simpan"
                        onAction="#handleSimpan"/>
                <Button text="Update"
                        onAction="#handleUpdate"/>
                <Button text="Hapus"
                        styleClass="button-danger"
                        onAction="#handleHapus"/>
            </HBox>

        </VBox>
    </StackPane>

    <!-- ===================== TABLE ===================== -->
    <TableView fx:id="tableBiayaPemasaran" prefHeight="360">
        <columns>
            <TableColumn fx:id="colTanggal"
                         text="Tanggal"
                         prefWidth="120"/>
            <TableColumn fx:id="colDeskripsi"
                         text="Deskripsi"
                         prefWidth="240"/>
            <TableColumn fx:id="colJumlah"
                         text="Jumlah"
                         prefWidth="140"/>
            <TableColumn fx:id="colKategori"
                         text="Kategori"
                         prefWidth="160"/>
            <TableColumn fx:id="colMarketingType"
                         text="Jenis Marketing"
                         prefWidth="200"/>
        </columns>
    </TableView>

</VBox>