<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.SaldoBankTahunLaluController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <HBox alignment="CENTER">
        <Label text="Saldo Bank Tahun Lalu"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <StackPane>
        <VBox maxWidth="800" styleClass="card">

            <GridPane hgap="15" vgap="12">
                <columnConstraints>
                    <ColumnConstraints prefWidth="160"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <Label text="Tanggal"/>
                <DatePicker fx:id="dpTanggal"
                            GridPane.columnIndex="1"/>

                <Label text="Total Saldo" GridPane.rowIndex="1"/>
                <TextField fx:id="tfTotalSaldo"
                           GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>

                <Label text="Keterangan" GridPane.rowIndex="2"/>
                <TextArea fx:id="tfKeterangan"
                          prefRowCount="3"
                          GridPane.rowIndex="2"
                          GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="12"
                  alignment="CENTER_RIGHT"
                  style="-fx-padding: 18 0 0 0;">
                <Button text="Simpan" onAction="#handleSimpan"/>
                <Button text="Update" onAction="#handleUpdate"/>
                <Button text="Hapus"
                        onAction="#handleDelete"
                        styleClass="button-danger"/>
            </HBox>

        </VBox>
    </StackPane>

    <TableView fx:id="table" prefHeight="360">
        <columns>

            <TableColumn fx:id="colId"
                         text="ID"
                         prefWidth="80"/>

            <TableColumn fx:id="colTanggal"
                         text="Tanggal"
                         prefWidth="150"/>

            <TableColumn fx:id="colTotalSaldo"
                         text="Total Saldo (Rp)"
                         prefWidth="180"/>

            <TableColumn fx:id="colKeterangan"
                         text="Keterangan"
                         prefWidth="350"/>

        </columns>
    </TableView>

</VBox>