<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.pembukuan_cv_abba_barokah.Controller.BiayaAdministrasiMainController"
           stylesheets="@Global.css">

    <VBox spacing="20"
          maxWidth="1000"
          VBox.vgrow="ALWAYS"
          styleClass="page-container">

        <!-- ================= HEADER ================= -->
        <Label text="Biaya Administrasi"
               style="-fx-font-size: 22; -fx-font-weight: bold;"/>

        <!-- ================= MENU NAVIGASI ================= -->
        <HBox spacing="10">
            <Button text="Biaya Administrasi"
                    onAction="#openBiayaAdministrasi"
                    styleClass="btn-primary"/>

            <Button text="Pegawai"
                    onAction="#openPegawai"/>

            <Button text="Gaji Pegawai"
                    onAction="#openGajiPegawai"/>
        </HBox>

        <!-- ================= CONTENT DINAMIS ================= -->
        <StackPane fx:id="contentPane"
                   VBox.vgrow="ALWAYS"
                   minHeight="400"
                   styleClass="card"/>

    </VBox>
</StackPane>