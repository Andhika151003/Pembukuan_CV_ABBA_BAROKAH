<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pembukuan_cv_abba_barokah.Controller.BiayaAdministrasiMainController"
            stylesheets="@Global.css"
            styleClass="content">

    <!-- ===================== HEADER ===================== -->
    <top>
        <HBox spacing="12"
              alignment="CENTER"
              style="-fx-padding: 16;">

            <Label text="Biaya Administrasi Utama"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Administrasi"
                    onAction="#openBiayaAdministrasi"/>

            <Button text="Gaji Pegawai"
                    onAction="#openGajiPegawai"/>
        </HBox>
    </top>

    <!-- ===================== CONTENT ===================== -->
    <center>
        <StackPane fx:id="contentPane"
                   style="-fx-padding: 16;" />
    </center>

</BorderPane>