<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.NeracaKeuanganController"
      spacing="25"
      styleClass="content"
      stylesheets="@Global.css"
      alignment="TOP_CENTER">

    <Label text="LAPORAN NERACA KEUANGAN"
           style="-fx-font-size:22px;-fx-font-weight:bold" alignment="CENTER"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Tahun:"/>
        <ComboBox fx:id="cbTahun"/>
        <Button text="Tampilkan" onAction="#loadData"/>
    </HBox>

    <VBox spacing="4" alignment="CENTER_LEFT">
        <Label text="Nama   : CV. ABBA BAROKAH"/>
        <Label text="NPWP   : 92.357.426.3-612.000"/>
        <Label text="Alamat : JL. MH. THAMRIN 3 NO.10 RT.003 RW.002 Tlogobendung, Gresik"/>
    </VBox>

    <Separator/>

    <GridPane alignment="CENTER" vgap="18">

    <!-- ================= ASET LANCAR ================= -->
    <Label text="ASET LANCAR"
           GridPane.rowIndex="0"
           style="-fx-font-weight:bold"/>

    <GridPane GridPane.rowIndex="1"
              hgap="40" vgap="8"
              alignment="CENTER">

        <columnConstraints>
            <ColumnConstraints prefWidth="220"/>
            <ColumnConstraints prefWidth="180" halignment="RIGHT"/>
        </columnConstraints>

        <Label text="Bank (Saldo Jurnal)"/>
        <Label fx:id="lblBank" GridPane.columnIndex="1"/>

        <Label text="Piutang Usaha" GridPane.rowIndex="1"/>
        <Label fx:id="lblPiutang" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Persediaan Barang" GridPane.rowIndex="2"/>
        <Label fx:id="lblPersediaan" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="TOTAL ASET LANCAR"
               GridPane.rowIndex="3"
               style="-fx-font-weight:bold"/>
        <Label fx:id="lblTotalAsetLancar"
               GridPane.rowIndex="3"
               GridPane.columnIndex="1"
               style="-fx-font-weight:bold"/>
    </GridPane>

    <Separator GridPane.rowIndex="2"/>

    <!-- ================= ASET TIDAK LANCAR ================= -->
    <Label text="ASET TIDAK LANCAR"
           GridPane.rowIndex="3"
           style="-fx-font-weight:bold"/>

    <GridPane GridPane.rowIndex="4"
              hgap="40" vgap="8"
              alignment="CENTER">

        <columnConstraints>
            <ColumnConstraints prefWidth="220"/>
            <ColumnConstraints prefWidth="180" halignment="RIGHT"/>
        </columnConstraints>

        <Label text="Inventaris"/>
        <Label fx:id="lblInventaris" GridPane.columnIndex="1"/>

        <Label text="TOTAL ASET TIDAK LANCAR"
               GridPane.rowIndex="1"
               style="-fx-font-weight:bold"/>
        <Label fx:id="lblTotalAsetTidakLancar"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"
               style="-fx-font-weight:bold"/>
    </GridPane>

    <Separator GridPane.rowIndex="5"/>

    <!-- ================= TOTAL ================= -->
    <GridPane GridPane.rowIndex="6"
              hgap="40" vgap="8"
              alignment="CENTER">

        <columnConstraints>
            <ColumnConstraints prefWidth="220"/>
            <ColumnConstraints prefWidth="180" halignment="RIGHT"/>
        </columnConstraints>

        <Label text="JUMLAH ASET"
               style="-fx-font-weight:bold"/>
        <Label fx:id="lblJumlahAset"
               GridPane.columnIndex="1"
               style="-fx-font-weight:bold"/>

        <Label text="Utang Usaha" GridPane.rowIndex="1"/>
        <Label fx:id="lblUtangUsaha"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"/>

        <Label text="Ekuitas" GridPane.rowIndex="2"/>
        <Label fx:id="lblEkuitas"
               GridPane.rowIndex="2"
               GridPane.columnIndex="1"/>

        <Label text="Jumlah Kewajiban dan Ekuitas"
               GridPane.rowIndex="3"
               style="-fx-font-weight:bold"/>
        <Label fx:id="lblJumlahKewajibanEkuitas"
               GridPane.rowIndex="3"
               GridPane.columnIndex="1"
               style="-fx-font-weight:bold"/>
    </GridPane>

</GridPane>


</VBox>