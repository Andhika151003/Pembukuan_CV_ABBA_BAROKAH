<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.NeracaKeuanganController"
      spacing="25"
      stylesheets="@Global.css"
      styleClass="content"
      alignment="TOP_CENTER">

    <!-- ================= JUDUL ================= -->
    <Label text="NERACA KEUANGAN"
           style="-fx-font-size:22px; -fx-font-weight:bold;"
           alignment="CENTER"/>

    <!-- ================= FILTER ================= -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Tahun"/>
        <ComboBox fx:id="cbTahun" prefWidth="120"/>
        <Button text="Tampilkan" onAction="#loadData"/>
    </HBox>

    <!-- ================= IDENTITAS ================= -->
    <VBox spacing="4" alignment="CENTER_LEFT">
        <Label text="Nama   : CV. ABBA BAROKAH"/>
        <Label text="NPWP   : 92.357.426.3-612.000"/>
        <Label text="Alamat : JL. MH. THAMRIN 3 NO.10 RT.003 RW.002 Tlogobendung, Gresik"/>
    </VBox>

    <Separator/>

    <!-- ================= ISI NERACA ================= -->
    <GridPane alignment="CENTER" hgap="60" vgap="8">

        <columnConstraints>

            <!-- Kolom kiri nama -->
            <ColumnConstraints hgrow="ALWAYS"/>

            <!-- Kolom kiri nominal -->
            <ColumnConstraints minWidth="160" halignment="RIGHT"/>

            <!-- Spacer -->
            <ColumnConstraints minWidth="40"/>

            <!-- Kolom kanan nama -->
            <ColumnConstraints hgrow="ALWAYS"/>

            <!-- Kolom kanan nominal -->
            <ColumnConstraints minWidth="160" halignment="RIGHT"/>

        </columnConstraints>

        <!-- ================= JUDUL KOLOM ================= -->

        <Label text="ASET"
               style="-fx-font-weight:bold;"
               GridPane.rowIndex="0"
               GridPane.columnSpan="2"
               GridPane.halignment="CENTER"/>

        <Label text="KEWAJIBAN DAN EKUITAS"
               style="-fx-font-weight:bold;"
               GridPane.rowIndex="0"
               GridPane.columnIndex="3"
               GridPane.columnSpan="2"
               GridPane.halignment="CENTER"/>

        <Region GridPane.rowIndex="1" GridPane.columnSpan="5" prefHeight="20"/>

        <!-- ================= ASET ================= -->

        <Label text="Aset Lancar" style="-fx-font-weight:bold;" GridPane.rowIndex="2"/>

        <Label text="Bank" GridPane.rowIndex="3"/>
        <Label fx:id="lblBank"
               GridPane.rowIndex="3"
               GridPane.columnIndex="1"
               maxWidth="Infinity"/>

        <Label text="Piutang Usaha" GridPane.rowIndex="4"/>
        <Label fx:id="lblPiutang"
               GridPane.rowIndex="4"
               GridPane.columnIndex="1"
               maxWidth="Infinity"/>

        <Label text="Persediaan Barang" GridPane.rowIndex="5"/>
        <Label fx:id="lblPersediaan"
               GridPane.rowIndex="5"
               GridPane.columnIndex="1"
               maxWidth="Infinity"/>

        <Label text="Jumlah Aset Lancar" GridPane.rowIndex="6"/>
        <Label fx:id="lblJumlahAsetLancar"
               GridPane.rowIndex="6"
               GridPane.columnIndex="1"
               maxWidth="Infinity"/>

        <Label text="Aset Tidak Lancar" style="-fx-font-weight:bold;" GridPane.rowIndex="7"/>

        <Label text="Pembelian Inventaris" GridPane.rowIndex="8"/>
        <Label fx:id="lblInventaris"
               GridPane.rowIndex="8"
               GridPane.columnIndex="1"
               maxWidth="Infinity"/>

        <Label text="Jumlah Aset Tidak Lancar" GridPane.rowIndex="9"/>
        <Label fx:id="lblJumlahAsetTidakLancar"
               GridPane.rowIndex="9"
               GridPane.columnIndex="1"
               maxWidth="Infinity"/>

        <Label text="TOTAL ASET" style="-fx-font-weight:bold;" GridPane.rowIndex="10"/>
        <Label fx:id="lblTotalAset"
               style="-fx-font-weight:bold;"
               GridPane.rowIndex="10"
               GridPane.columnIndex="1"
               maxWidth="Infinity"/>

        <!-- ================= KEWAJIBAN ================= -->

        <Label text="Kewajiban Jangka Pendek"
               style="-fx-font-weight:bold;"
               GridPane.rowIndex="2"
               GridPane.columnIndex="3"/>

        <Label text="Utang Usaha"
               GridPane.rowIndex="3"
               GridPane.columnIndex="3"/>

        <Label fx:id="lblUtang"
               GridPane.rowIndex="3"
               GridPane.columnIndex="4"
               maxWidth="Infinity"/>

        <Label text="TOTAL KEWAJIBAN"
               GridPane.rowIndex="4"
               GridPane.columnIndex="3"/>

        <Label fx:id="lblTotalKewajiban"
               GridPane.rowIndex="4"
               GridPane.columnIndex="4"
               maxWidth="Infinity"/>

        <Label text="EKUITAS"
               style="-fx-font-weight:bold;"
               GridPane.rowIndex="5"
               GridPane.columnIndex="3"/>

        <Label text="Ekuitas"
               GridPane.rowIndex="6"
               GridPane.columnIndex="3"/>

        <Label fx:id="lblEkuitas"
               GridPane.rowIndex="6"
               GridPane.columnIndex="4"
               maxWidth="Infinity"/>

        <Label text="Modal"
               GridPane.rowIndex="7"
               GridPane.columnIndex="3"/>

        <Label fx:id="lblModal"
               GridPane.rowIndex="7"
               GridPane.columnIndex="4"
               maxWidth="Infinity"/>

        <Label text="TOTAL EKUITAS"
               style="-fx-font-weight:bold;"
               GridPane.rowIndex="8"
               GridPane.columnIndex="3"/>

        <Label fx:id="lblTotalEkuitas"
               style="-fx-font-weight:bold;"
               GridPane.rowIndex="8"
               GridPane.columnIndex="4"
               maxWidth="Infinity"/>

        <Label text="JUMLAH KEWAJIBAN DAN EKUITAS"
               style="-fx-font-weight:bold;"
               GridPane.rowIndex="9"
               GridPane.columnIndex="3"/>

        <Label fx:id="lblJumlahKewajibanEkuitas"
               style="-fx-font-weight:bold;"
               GridPane.rowIndex="9"
               GridPane.columnIndex="4"
               maxWidth="Infinity"/>

    </GridPane>

    <Separator/>

    <VBox alignment="CENTER_RIGHT" spacing="5">
        <Label text="Gresik,......2026"/>
        <Label text="Direktur," style="-fx-font-weight:bold;"/>
        <Region prefHeight="60"/>
        <Label text="Bambang Sugiarto"
               style="-fx-font-weight:bold;"/>
    </VBox>

    <Separator/>

    <Button text="Simpan"
            onAction="#handleExportWord"
            style="-fx-font-weight:bold; -fx-padding:10 25 10 25;"/>

</VBox>