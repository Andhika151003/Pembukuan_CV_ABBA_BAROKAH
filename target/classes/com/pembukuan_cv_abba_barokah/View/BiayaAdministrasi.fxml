<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.BiayaAdministrasiController"
      spacing="20"
      styleClass="card">
      <!-- ================= TITLE ================= -->
<Label text="Input Biaya Administrasi"
       style="-fx-font-size: 16; -fx-font-weight: bold;"/>

<!-- ================= FORM ================= -->
<GridPane hgap="16" vgap="12">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>

    <!-- Tanggal -->
    <Label text="Tanggal"/>
    <DatePicker fx:id="tanggalField"
                GridPane.columnIndex="1"/>

    <!-- Jenis Biaya -->
    <Label text="Jenis Biaya"
           GridPane.rowIndex="1"/>
    <ComboBox fx:id="jenisBiayaBox"
              promptText="Pilih Jenis Administrasi"
              GridPane.rowIndex="1"
              GridPane.columnIndex="1"/>

    <!-- Jumlah -->
    <Label text="Jumlah Biaya"
           GridPane.rowIndex="2"/>
    <TextField fx:id="jumlahBiayaField"
               promptText="Contoh: 1500000"
               GridPane.rowIndex="2"
               GridPane.columnIndex="1"/>

    <!-- Keterangan -->
    <Label text="Keterangan"
           GridPane.rowIndex="3"/>
    <TextField fx:id="keteranganField"
               promptText="Opsional"
               GridPane.rowIndex="3"
               GridPane.columnIndex="1"/>
</GridPane>

<!-- ================= ACTION ================= -->
<HBox alignment="CENTER_RIGHT">
    <Button fx:id="btnSimpan"
            text="Simpan"
            onAction="#handleSimpan"
            styleClass="btn-primary"
            disable="true"/>
</HBox>

</VBox>