<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pembukuan_cv_abba_barokah.Controller.BiayaAdministrasiController"
      stylesheets="@Global.css"
      spacing="24"
      styleClass="content">

    <HBox alignment="CENTER">
        <Label text="Biaya Administrasi"
               style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </HBox>

    <StackPane>
        <VBox maxWidth="650" styleClass="card">

            <GridPane hgap="15" vgap="12">
                <columnConstraints>
                    <ColumnConstraints prefWidth="160"/>
                    <ColumnConstraints/>
                </columnConstraints>

                <Label text="Tanggal"/>
                <DatePicker fx:id="tanggalField"
                            GridPane.columnIndex="1"/>

                <Label text="Jenis Administrasi"
                       GridPane.rowIndex="1"/>
                <ComboBox fx:id="cbJenisAdministrasi"
                          GridPane.rowIndex="1"
                          GridPane.columnIndex="1"/>

                <Label text="Jumlah Administrasi"
                       GridPane.rowIndex="2"/>
                <TextField fx:id="jumlahField"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <Label text="Keterangan"
                       GridPane.rowIndex="3"/>
                <TextField fx:id="keteranganField"
                           GridPane.rowIndex="3"
                           GridPane.columnIndex="1"/>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="12">
                <Button text="Simpan" onAction="#handleSimpan"/>
                <Button text="Update" onAction="#handleUpdate"/>
                <Button text="Hapus"
                        onAction="#handleDelete"
                        styleClass="button-danger"/>
            </HBox>

        </VBox>
    </StackPane>

    <TableView fx:id="tableAdministrasi" prefHeight="320">
        <columns>
            <TableColumn fx:id="colTanggal" text="Tanggal" prefWidth="120"/>
            <TableColumn fx:id="colJenis" text="Jenis" prefWidth="150"/>
            <TableColumn fx:id="colJumlah" text="Jumlah" prefWidth="150"/>
            <TableColumn fx:id="colKeterangan" text="Keterangan" prefWidth="180"/>
        </columns>
    </TableView>

</VBox>